<div class="<%= "contact_shipping" if f.object.is_shipping%><%= "contact_billing" if f.object.is_billing%>">
<%= t('activerecord.attributes.contact.first_name')%>: <%= f.text_field :first_name, :class=>"first_name" %><br />
<%= t('activerecord.attributes.contact.last_name')%>: <%= f.text_field :last_name, :class=>"last_name" %><br />
<%= t('activerecord.attributes.contact.street')%>: <%= f.text_field :street, :class=>"street" %><br />
<%= t('activerecord.attributes.contact.street_nr')%>: <%= f.text_field :street_nr, :class=>"street_nr" %><br />
<%= t('activerecord.attributes.contact.city')%>: <%= f.text_field :city, :class=>"city" %><br />
<%= t('activerecord.attributes.contact.zip_code')%>: <%= f.text_field :zip_code, :class=>"zip_code" %><br />
<% if f.object.is_billing? %>
  <%= t('activerecord.attributes.contact.email')%>: <%= f.text_field :email %><br />
  <%= t('activerecord.attributes.contact.phone')%>: <%= f.text_field :phone %><br />
<% end %>
<%= f.hidden_field :is_shipping %>
<%= f.hidden_field :is_billing %>
</div>
