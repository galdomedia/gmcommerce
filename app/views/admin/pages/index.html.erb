<% title "Pages" %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%=h page.title %></td>
      <td><%=h page.body %></td>
      <td><%= link_to "Show", admin_page_url(page) %></td>
      <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
      <td><%= link_to "Destroy", admin_page_url(page), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Page", new_admin_page_path %></p>
