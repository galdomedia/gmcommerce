<p>

  <% for o in f.object.options %>
    <%= f.input :options, :label=>h(o.option_group.name), :collection=>o.option_group.options.all.map{ |o| [h(o.name), o.id] }, :input_html=>{ :multiple=>false, :size=>1 } %>
  <% end %>
  <%= f.input :price %>
   <% unless f.object.new_record? %>
    <%= f.check_box :_delete, :class=>"field checkbox" %> <%= f.label :_delete, 'Delete', :class=>"choice" %>
  <% end %>
</p>
