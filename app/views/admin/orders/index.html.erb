<% title "Orders" %>

<table>
  <tr>
    <th>Number</th>
    <th>Status</th>
  </tr>
  <% for order in @orders %>
    <tr>
      <td><%=h order.number %></td>
      <td><%=h order.status %></td>
      <td><%= link_to t('gmcommerce.common.show'), admin_order_path(order) %></td>
      <td><%= link_to t('gmcommerce.common.edit'), edit_admin_order_path(order), :class=>"edit_link" %></td>
      <td><%= link_to t('gmcommerce.common.destroy'), admin_order_path(order), :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Order", new_admin_order_path %></p>
