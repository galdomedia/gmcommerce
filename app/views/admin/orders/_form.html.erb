<% semantic_form_for [:admin, @order] do |f| %>
  <%= f.error_messages %>
  <%= f.input :number, :hint=>"Not required, will be generated automatically (if not present)" %>
  <li>
    <label><%= t('activerecord.attributes.order.secret')%>:</label>
    <%=h @order.secret %>
  </li>
  <li>
    <label><%= t('activerecord.attributes.order.status') %>: </label>
    <%=h @order.status %>
  </li>
  <li>
    <label><%= t('activerecord.attributes.order.order_value') %>:</label>
    <%=h @order.order_value %>
  </li>
  <li>
    <label><%= t('activerecord.attributes.order.shipment_cost') %>:</label>
    <%=h @order.shipment_cost %>
  </li>
  <%= f.input :comment, :input_html=>{:rows=>5} %>
  <%= f.input :shipment %>
  <%= f.buttons %>
<% end %>
