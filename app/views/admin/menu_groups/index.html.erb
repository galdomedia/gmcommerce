<% content_for :header do %>
  <%= link_to t('menu_groups.plural'), admin_menu_groups_path %>
  
<% end %>
<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.menu_group.name')%></th>
    <th><%= t('activerecord.attributes.menu_group.identifier')%></th>
  </tr>
  <% for menu_group in @menu_groups %>
    <tr>
      <td><%=h menu_group.name %></td>
      <td><%=h menu_group.identifier %></td>
      <td class="action_cell show_cell"><%= link_to t('gmcommerce.common.show'), admin_menu_group_path(menu_group), :class=>"show_link" %></td>
      <td class="action_cell show_cell"><%= link_to t('menu_items.plural'), admin_menu_group_menu_items_path(menu_group), :class=>"icon_link menu_items_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.edit'), edit_admin_menu_group_path(menu_group), :class=>"edit_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.destroy'), admin_menu_group_path(menu_group), :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to t('menu_groups.new'), new_admin_menu_group_path, :class=>"new_link"%> |
<%= link_to t('menu_groups.reorder'), reorder_admin_menu_groups_path, :class=>"icon_link reorder_link" %></p>
