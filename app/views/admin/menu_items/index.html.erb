<% content_for :header do %>
  <%= link_to t('menu_groups.plural'), admin_menu_groups_path %>
  &raquo;
  <%= t('menu_groups.singular')%>
  <%= link_to h(@menu_group.name), admin_menu_group_path(@menu_group)%>
  &raquo;
  <%= t('menu_items.plural') %>
<% end %>


<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.menu_item.name')%></th>
    <th><%= t('activerecord.attributes.menu_item.url')%></th>
    <th><%= t('activerecord.attributes.menu_item.page')%></th>
  </tr>
  <% for menu_item in @menu_items %>
    <tr>
      <td><%=h menu_item.name %></td>
      <td><%=h menu_item.url %></td>
      <td><%=h menu_item.page %></td>
      <td class="action_cell show_cell"><%= link_to t('gmcommerce.common.show'), admin_menu_group_menu_item_path(@menu_group, menu_item), :class=>"show_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.edit'), edit_admin_menu_group_menu_item_path(@menu_group, menu_item), :class=>"edit_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.destroy'), admin_menu_group_menu_item_path(@menu_group, menu_item), :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to t('menu_items.new'), new_admin_menu_group_menu_item_path(@menu_group), :class=>"new_link" %> |
<%= link_to t('menu_items.reorder'), reorder_admin_menu_group_menu_items_path(@menu_group), :class=>"icon_link reorder_link" %></p>
