<% title "Contacts" %>

<table class="index">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
  </tr>
  <% for contact in @contacts %>
    <tr>
      <td><%=h contact.first_name %></td>
      <td><%=h contact.last_name %></td>
      <td><%= link_to t('gmcommerce.common.show'), admin_contact_path(contact) %></td>
      <td><%= link_to t('gmcommerce.common.edit'), edit_admin_contact_path(contact), :class=>"edit_link" %></td>
      <td><%= link_to t('gmcommerce.common.destroy'), contact, :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Contact", new_admin_contact_path %></p>
