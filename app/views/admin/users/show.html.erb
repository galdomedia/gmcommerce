<% content_for :header do -%>
  User: <em><%=h @user.login %></em>
<% end -%>

<% content_for :sidebar do -%>
  <%= link_to "Reset password", reset_password_admin_user_path(@user) %>	
<% end -%>
Login: <%=h(@user.login) %> <br />
ID: <%=h(@user.id) %> <br />
<br />
Email: <%=h(@user.email) %><br />
Password: ********<small><%=link_to "reset password", reset_password_admin_user_url(@user)%></small><br />
<br />
Created at:  <%=h @user.created_at.to_s(:long) %><br />
Last changes:  <%=h @user.updated_at.to_s(:long) %><br />

<h4>User roles: </h4>
<ul>
  <% @user.roles.each do |role| %>
    <li><%=h role.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_admin_user_path(@user) %> | <%= link_to 'Back', admin_users_path %>
