<table class="index">
  <tr>
    <th>ID</th>
    <th>Login</th>
    <th>Email</th>
    <th>Data rejestracji</th>
  </tr>
  
  <% # TODO: (base_app) Add some sort of search feature to easily find users %>
  <% for user in @users %>
    <tr>
      <td><%=h user.id %></td>
      <td><%= link_to h(user.login), admin_user_url(user) %></td>
      <td><%=h user.email %></td>
      <td><%=h user.created_at %></td>
      <td class="actions">
        <%= link_to "Show", admin_user_path(user) %> |
        <%= link_to "Edit", edit_admin_user_path(user) %> |
        <%= link_to "Destroy", admin_user_path(user), :confirm => 'Are you sure?', :method => :delete if current_user!=user and (admin? or not user.is_admin?) %>
      </td>
    </tr>
  <% end %>
</table>
