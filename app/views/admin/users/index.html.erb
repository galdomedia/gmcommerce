<% form_for @search do |f| %>
  <table>
    <tr><td>Login</td><td><%= f.text_field :login_like, :size => 13 %></td></tr>
    <tr><td colspan="2"><%= f.submit "Find" %></td></tr>
  </table>
<% end %>

<table class="index">
  <tr>
    <th><%= order @search, :by => :id %></th>
    <th><%= order @search, :by => :login %></th>
    <th><%= order @search, :by => :email %></th>
    <th><%= order @search, :by => :created_at %></th>
  </tr>

  <% # TODO: (base_app) Add some sort of search feature to easily find users %>
  <% for user in @users %>
    <tr>
      <td><%=h user.id %></td>
      <td><%= link_to h(user.login), admin_user_url(user) %></td>
      <td><%=h user.email %></td>
      <td><%=h user.created_at %></td>
      <td class="actions">
        <%= link_to t('gmcommerce.common.show'), admin_user_path(user) %> |
        <%= link_to t('gmcommerce.common.edit'), edit_admin_user_path(user), :class=>"edit_link" %> |
        <%= link_to t('gmcommerce.common.destroy'), admin_user_path(user), :confirm => 'Are you sure?', :method => :delete if current_user!=user and (admin? or not user.is_admin?), :class=>"destroy_link" %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users %>

