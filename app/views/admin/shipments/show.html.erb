<% content_for :header do %>
  <%= link_to t('shipments.plural'), admin_shipments_path %>
    &raquo;
  <%= link_to h(@shipment.name), admin_shipment_path(@shipment) %>
<% end %>

<p>
  <strong>Name:</strong>
  <%=h @shipment.name %>
</p>
<p>
  <strong>Cost:</strong>
  <%=h @shipment.cost %>
</p>
<p>
  <strong>Active:</strong>
  <%=h @shipment.active %>
</p>
<p>
  <strong>Free From Cart Value:</strong>
  <%=h @shipment.free_from_cart_value %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @shipment.description %>
</p>

<p>
  <%= link_to t('gmcommerce.common.edit'), edit_admin_shipment_path(@shipment), :class=>"edit_link" %> |
  <%= link_to t('gmcommerce.common.destroy'), admin_shipment_url(@shipment), :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link" %> |
  <%= link_to t('gmcommerce.common.view_all'), admin_shipments_path, :class=>"view_all_link" %>
</p>
