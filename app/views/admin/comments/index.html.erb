<% content_for :header do %>
  <%= link_to h(@product.name), admin_product_path(@product)%>
  &raquo;
  <%= t('comments.plural')%>
<% end %>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.comment.author')%></th>
    <th><%= t('activerecord.attributes.comment.created_at')%></th>
  </tr>
  <% for comment in @comments %>
    <tr>
      <td><%=h comment.author %></td>
      <td><%=h comment.created_at %></td>
      <td class="action_cell show_cell"><%= link_to t('gmcommerce.common.show'), admin_product_comment_path(@product, comment), :class=>"show_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.edit'), edit_admin_product_comment_path(@product, comment), :class=>"edit_link edit_comment_link" %></td>
      <td class="action_cell"><%= link_to t('gmcommerce.common.destroy'), admin_product_comment_path(@product, comment), :confirm => 'Are you sure?', :method => :delete, :class=>"destroy_link destroy_comment_link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to t('comments.new'), new_admin_product_comment_path(@product), :class=>"new_link new_comment_link" %></p>
